<div class="add-inventory">
    <h1><%= title %></h1>
    <%- messages() %>
  
    <% if (errors) { %>
      <ul class="notice">
        <% errors.array().forEach(error => { %>
          <li><%= error.msg %></li>
        <% }) %>
      </ul>
    <% } %>
  
    <form action="/inv/add-inventory" method="POST" onsubmit="return validateForm()">
        <div>
          <label for="inv_make">Make:</label>
          <input type="text" id="inv_make" name="inv_make" required value="<%= locals.inv_make %>">
        </div>
        <div>
          <label for="inv_model">Model:</label>
          <input type="text" id="inv_model" name="inv_model" required value="<%= locals.inv_model %>">
        </div>
        <div>
          <label for="inv_year">Year:</label>
          <input type="number" id="inv_year" name="inv_year" required value="<%= locals.inv_year %>">
        </div>
        <div>
          <label for="inv_description">Description:</label>
          <textarea id="inv_description" name="inv_description" required><%= locals.inv_description %></textarea>
        </div>
        <div>
          <label for="inv_classification">Classification:</label>
          <select id="inv_classification" name="inv_classification" required>
            <% classifications.forEach(classification => { %>
              <option value="<%= classification.classification_id %>" <%= classification.classification_id === locals.inv_classification ? 'selected' : '' %>><%= classification.classification_name %></option>
            <% }) %>
          </select>
        </div>
        <div>
            <label for="inv_image">Image Path:</label>
            <input type="text" id="inv_image" name="inv_image" required value="/images/vehicles/no-image.png">
          </div>
          <div>
            <label for="inv_thumbnail">Thumbnail Path:</label>
            <input type="text" id="inv_thumbnail" name="inv_thumbnail" required value="/images/vehicles/no-image-tn.png">
          </div>          
        <div>
          <label for="inv_price">Price:</label>
          <input type="number" id="inv_price" name="inv_price" required value="<%= locals.inv_price %>">
        </div>
        <div>
          <label for="inv_miles">Miles:</label>
          <input type="number" id="inv_miles" name="inv_miles" required value="<%= locals.inv_miles %>">
        </div>
        <div>
          <label for="inv_color">Color:</label>
          <input type="text" id="inv_color" name="inv_color" required value="<%= locals.inv_color %>">
        </div>
        <div>
          <button type="submit">Add Inventory</button>
        </div>
      </form>
      
  </div>
  

  <script>
    function validateForm() {
      // Get form inputs
      var invMake = document.getElementById("inv_make").value;
      var invModel = document.getElementById("inv_model").value;
      var invYear = document.getElementById("inv_year").value;
      var invDescription = document.getElementById("inv_description").value;
      var invClassification = document.getElementById("inv_classification").value;
      var invImagePath = document.getElementById("inv_image").value;
      var invThumbnailPath = document.getElementById("inv_thumbnail").value;
      var invPrice = document.getElementById("inv_price").value;
      var invMiles = document.getElementById("inv_miles").value;
      var invColor = document.getElementById("inv_color").value;
  
      // Validate inputs
      if (
        invMake.trim().length < 2 ||
        invModel.trim().length < 2 ||
        isNaN(invYear) ||
        invYear.length !== 4 ||
        invDescription.trim().length < 5 ||
        invClassification.trim() === "" ||
        invImagePath.trim() === "" ||
        invThumbnailPath.trim() === "" ||
        isNaN(invPrice) ||
        isNaN(invMiles) ||
        invColor.trim().match(/\d/)
      ) {
        // Display error message or perform validation logic here
        alert("Invalid input. Please check the form fields.");
        return false;
      }
  
      // Additional validation logic can be added here
  
      return true;
    }
  </script>
  