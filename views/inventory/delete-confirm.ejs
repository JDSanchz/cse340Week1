<div class="delete-confirm">
    <h1><%= title %></h1>
    <%- messages() %>
  
    <% if (errors) { %>
      <ul class="notice">
        <% errors.array().forEach(error => { %>
          <li><%= error.msg %></li>
        <% }) %>
      </ul>
    <% } %>
  
    <form action="/inv/delete" method="POST">
      <div>
        <label for="inv_make">Make:</label>
        <input type="text" id="inv_make" name="inv_make" value="<%= locals.inv_make %>" readonly>
      </div>
      <div>
        <label for="inv_model">Model:</label>
        <input type="text" id="inv_model" name="inv_model" value="<%= locals.inv_model %>" readonly>
      </div>
      <div>
        <label for="inv_year">Year:</label>
        <input type="number" id="inv_year" name="inv_year" value="<%= locals.inv_year %>" readonly>
      </div>
      <div>
        <label for="inv_price">Price:</label>
        <input type="number" id="inv_price" name="inv_price" value="<%= locals.inv_price %>" readonly>
      </div>
      <div>
        <p>Confirm Deletion - The delete is permanent.</p>
      </div>
      <div>
        <input type="hidden" name="inv_id" value="<%= locals.inv_id %>">
        <button type="submit">Delete</button>
      </div>
    </form>
  </div>
  
  <script src="../../js/inv-update.js"></script>